# ========================================
# Library API - Docker Compose Environment Variables
# ========================================
# 1. Copy this file to `.env`
# 2. Update the values (pass etc.)
# 3. Run: docker-compose --env-file .env up -d
# 4. Access:
#    - API: http://localhost:8080
#    - Seq Logs: http://localhost:8081
#    - Jaeger Tracing: http://localhost:16686
#    - PostgreSQL: localhost:5432

# ========================================
# PostgreSQL Database Configuration
# ========================================
# PostgreSQL username
POSTGRES_USER=libuser

# PostgreSQL password
POSTGRES_PASSWORD=h03e1n_devPass

# PostgreSQL database name
POSTGRES_DB=libdb

# PostgreSQL exposed port (host machine)
POSTGRES_PORT=5432

# ========================================
# Application Ports
# ========================================
# Library gRPC service port (host machine)
GRPC_PORT=5001

# Library API gateway port (host machine)
API_PORT=8080

# ========================================
# Seq Log Server Configuration
# ========================================
# Seq UI port (host machine)
SEQ_UI_PORT=8081

# Seq log ingestion port (host machine)
SEQ_INGESTION_PORT=5341

# ========================================
# Jaeger Tracing Configuration
# ========================================
# Jaeger UI port (host machine)
JAEGER_UI_PORT=16686

# Jaeger OTLP gRPC receiver port (host machine)
JAEGER_OTLP_GRPC_PORT=4317

# Jaeger OTLP HTTP receiver port (host machine)
JAEGER_OTLP_HTTP_PORT=4318

# ========================================
# Application Configuration
# ========================================
# ASP.NET Core environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Production

# Logging level (Verbose, Debug, Information, Warning, Error, Fatal)
LOG_LEVEL=Information
